<section class="py-4">
   <h2>Registro</h2>

   <hr class="w-50 mx-auto" />

   <form action="/register" method="POST" enctype="multipart/form-data">
      <div class="form-group row w-50 m-auto">
         <div class="form-group col-12 col-sm-6 my-2">
            <label for="email-register">Email</label>
            <input id="email-register" class="form-control m-auto" name="email" type="email" required />
         </div>
         <div class="form-group col-12 col-sm-6 my-2">
            <label for="name-register">Nombre</label>
            <input id="name-register" class="form-control m-auto" name="name" type="text" required />
         </div>
         <div class="form-group col-12 col-sm-6 my-2">
            <label for="pwd-register">Password</label>
            <input id="pwd-register" class="form-control m-auto" name="password" type="password" required />
         </div>
         <div class="form-group col-12 col-sm-6 my-2">
            <label for="pwd-repeat-register">Repita la password</label>
            <input
               id="pwd-repeat-register"
               class="form-control m-auto"
               name="confirmPassword"
               type="password"
               required
            />
         </div>
         <div class="form-group col-12 col-sm-6 my-2">
            <label for="exp-register">Años de experiencia</label>
            <input id="exp-register" class="form-control m-auto" name="experience" type="number" required value="0" />
         </div>
         <div class="form-group col-12 col-sm-6 my-2">
            <label for="specialty-register">Especialidad</label>
            <input id="specialty-register" class="form-control m-auto" name="specialty" type="text" required />
         </div>
         <div class="form-group col-12 col-sm-12 my-4">
            <label class="d-block mb-2">Foto de perfil</label>
            <input type="file" name="avatar" />
         </div>
      </div>
      <input type="submit" class="btn btn-info mb-1" value="Registrarme" />
   </form>
   <p><a href="/login"> Iniciar sesión</a></p>
</section>