<section class="py-5">
   <h2>Iniciar Sesión</h2>
   <hr class="w-50 mx-auto" />

   <form id="login-form" action="/login" method="POST">
      <div class="form-group">
         <div class="form-group my-2">
            <label for="email">Email</label>
            <input id="email" class="form-control w-25 m-auto" type="email" name="email"/>
         </div>
         <div class="form-group my-2">
            <label for="password">Password</label>
            <input id="password" class="form-control w-25 m-auto" type="password" name="password" />
         </div>
      </div>
      <input type="submit" class="btn btn-success m-3" value="Iniciar Sesión" />    
   </form>
   <p>¿Aún no tienes cuenta? <a href="/register">Regístrate</a></p>
</section>