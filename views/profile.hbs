<section class="py-4">
   <h2>Datos del perfil</h2>
   <hr class="w-50 mx-auto" />

   <form id="skater-info">
      <div class="form-group row w-50 m-auto">
         <div class="form-group col-12 col-sm-6 my-2">
            <label for="email">Email</label>
            <input id="email" class="form-control m-auto" type="email" name="email" disabled value={{skater.email}} />
         </div>
         <div class="form-group col-12 col-sm-6 my-2">
            <label for="name">Nombre</label>
            <input id="name" class="form-control m-auto" type="text" name="name" value={{skater.nombre}} />
         </div>
         <div class="form-group col-12 col-sm-6 my-2">
            <label for="password">Password</label>
            <input
               id="password"
               class="form-control m-auto"
               type="password"
               name="password"
               value={{skater.password}}
            />
         </div>
         <div class="form-group col-12 col-sm-6 my-2">
            <label for="confirm-password">Repita la password</label>
            <input
               id="confirm-password"
               class="form-control m-auto"
               type="password"
               name="confirmPassword"
               value={{skater.password}}
            />
         </div>
         <div class="form-group col-12 col-sm-6 my-2">
            <label for="experience">AÃ±os de experiencia</label>
            <input
               id="experience"
               class="form-control m-auto"
               type="number"
               name="experience"
               value={{skater.anos_experiencia}}
            />
         </div>
         <div class="form-group col-12 col-sm-6 my-2">
            <label for="specialty">Especialidad</label>
            <input
               id="specialty"
               class="form-control m-auto"
               type="text"
               name="specialty"
               value={{skater.especialidad}}
            />
         </div>
      </div>
   </form>
   <div class="m-4">
      <button id="update-btn" class="btn btn-primary">Actualizar</button>
      <button id="delete-btn" class="btn btn-danger">Eliminar cuenta</button>
   </div>
</section>